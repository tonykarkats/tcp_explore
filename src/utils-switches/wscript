# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('utils-switches', ['core'])
    module.source = [
        'model/utils-switches.cc',
        'helper/utils-switches-helper.cc',
        ]

    module_test = bld.create_ns3_module_test_library('utils')
    module_test.source = [
        'test/utils-test-suite.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'utils-switches'
    headers.source = [
        'model/utils-switches.h',
        'helper/utils-switches-helper.h',
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

